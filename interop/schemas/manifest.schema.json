{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "orchestration-kit/interop/manifest.schema.json",
  "title": "Run Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "metadata",
    "artifact_index",
    "truth_pointers",
    "log_pointers",
    "capsule_path"
  ],
  "properties": {
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "run_id",
        "kit",
        "phase",
        "started_at",
        "finished_at",
        "exit_code",
        "command",
        "cwd"
      ],
      "properties": {
        "run_id": { "type": "string", "minLength": 1 },
        "parent_run_id": { "type": ["string", "null"] },
        "kit": { "type": "string", "enum": ["tdd", "research", "math"] },
        "phase": { "type": "string", "minLength": 1 },
        "started_at": { "type": "string", "minLength": 1 },
        "finished_at": { "type": "string", "minLength": 1 },
        "exit_code": { "type": "integer" },
        "command": {
          "type": "array",
          "items": { "type": "string" }
        },
        "cwd": { "type": "string", "minLength": 1 }
      }
    },
    "artifact_index": {
      "type": "object",
      "additionalProperties": false,
      "required": ["tracked", "omitted", "limits"],
      "properties": {
        "tracked": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["path", "kind", "bytes", "sha256"],
            "properties": {
              "path": { "type": "string", "minLength": 1 },
              "kind": { "type": "string", "minLength": 1 },
              "bytes": { "type": "integer", "minimum": 0 },
              "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
            }
          }
        },
        "omitted": {
          "type": "object",
          "additionalProperties": false,
          "required": ["files", "bytes"],
          "properties": {
            "files": { "type": "integer", "minimum": 0 },
            "bytes": { "type": "integer", "minimum": 0 }
          }
        },
        "limits": {
          "type": "object",
          "additionalProperties": false,
          "required": ["max_files", "max_total_bytes"],
          "properties": {
            "max_files": { "type": "integer", "minimum": 1 },
            "max_total_bytes": { "type": "integer", "minimum": 1 }
          }
        }
      }
    },
    "truth_pointers": {
      "type": "array",
      "items": { "type": "string" }
    },
    "log_pointers": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["path", "kind", "hint"],
        "properties": {
          "path": { "type": "string", "minLength": 1 },
          "kind": { "type": "string", "minLength": 1 },
          "hint": { "type": "string", "minLength": 1 }
        }
      }
    },
    "capsule_path": {
      "type": "string",
      "minLength": 1
    }
  }
}
